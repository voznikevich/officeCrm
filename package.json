{
  "name": "officecrm",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start_script": "env-cmd -f .env.${ENV} node db/seeds/seed.js && env-cmd -f .env.${ENV} nodemon server.js",
    "check_env_and_start": "env-cmd -f .env.${ENV} nodemon server.js",
    "start_server": "NODE_ENV=${NODE_ENV} npm run db:migrate && NODE_ENV=${NODE_ENV} npm run db:seed && ENV=${ENV} npm run check_env_and_start",
    "start": "nodemon server.js",
    "start:dev": "NODE_ENV=dev ENV=dev npm run start",
    "+++++++++++++++FORMAT_SCRIPT": "++++++++++++++++++++++++++++++",
    "format:check": "prettier --check \"./**/*.{js,ts,jsx,tsx,css,html}\"",
    "format:fix": "prettier --write \"./**/*.{js,ts,jsx,tsx,css,html}\"",
    "+++++++++++++++DB_SCRIPT": "++++++++++++++++++++++++++++++++++",
    "db:create": "npx sequelize db:create",
    "db:migrate": "npx sequelize db:migrate",
    "db:seed": "npx sequelize db:seed:all",
    "db:drop": "npx sequelize db:drop",
    "db:fresh": "npm run db:drop && npm run db:create && npm run db:migrate && npm run db:seed"
  },
  "private": true,
  "dependencies": {
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "env-cmd": "^10.1.0",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "generate-password": "^1.7.1",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "nodemon": "^3.1.0",
    "pg": "^8.6.0",
    "sequelize": "^6.37.5",
    "sequelize-cli": "^6.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5"
  }
}
